mixin galleryItem(image, description, width, height)
  a(href=image, data-fancybox='gallery', data-caption=description)
    img(src=image, alt=description, width=width, height=height)

mixin footer(page)
  footer
    if (page=='disclaimer')
      |All photos &#169;2017-2018 Fabian Poels ~ hosting by <a href="http://bonos.be" target="_blank">bonos.be</a> ~ logo by <a href="http://annelienvandenbosch.be" target="_blank">annelienvandenbosch.be</a>
    else
      <a href="disclaimer.html">All photos &#169;2017-2018 Fabian Poels</a> ~ hosting by <a href="http://bonos.be" target="_blank">bonos.be</a> ~ logo by <a href="http://annelienvandenbosch.be" target="_blank">annelienvandenbosch.be</a>

mixin route(name, info, comment)
  li.route
    span.route-name!= name
    span.route-info!= info
    span.route-comment!= comment
