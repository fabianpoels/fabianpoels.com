mixin navigation(page)
  nav
    if (page=='home')
      a.active(href='index.html') home
    else
      a(href='index.html') home
    if (page=='portfolio')
      a.active(href='climbing.html') portfolio
    else
      a(href='climbing.html') portfolio
    if (page=='stories')
      a.active(href='berdorf.html') stories
    else
      a(href='berdorf.html') stories
    if (page=='about')
      a.active(href='about.html') about
    else
      a(href='about.html') about
    if (page=='contact')
      a.active(href='contact.html') contact
    else
      a(href='contact.html') contact
    //-
      a#instagram(href='https://www.instagram.com/fabianpoels/' target='_blank')
        img(src='assets/png/instagram-logo.png' alt='instagram' width='35' height='35')

